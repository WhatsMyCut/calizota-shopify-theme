#shopify-section-slideshow {display:none !important;}


.site-header__logo-link {
  border:1px solid #666;
  display:flex;
  flex-direction: column;
  margin-right:20px;
}
.site-header__logo-link img {
  border:2px solid #ffbf00; 
  box-shadow: 0 0 3px #333;
}
.site-header__description {
  clear:both;
  font-family: "Open Sans","HelveticaNeue","Helvetica Neue",sans-serif;
  font-weight: 400;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  font-size: 0.5em;
}
.site-header__description a {
	color: #000 !important; 
}
.site-header__secure-logos  {
  width:auto;
  height: 2.5em;
}
h5.guarantee {
  display:inline;
  margin-right:0;
  font-size:0.8em;
  font-color: inherit;
}
h5.guarantee .emphasis {
  color: #090;
}

.payment-icons .icon {
  height: 20px;
  width: auto;
}
.payment-icons .icon stroke {
  color: rgba(194,0,40,0.6) !important;
}
 
.collection-card {
  padding:0; 
  display: flex;
  flex-direction: row;
}
.product-card {
  padding:0;
  display:table-cell;
  height:100%;
  min-height:125px;
}

.product-card__info {
  padding-bottom: 0;
}
.product-card__price {
  color: #060;
  padding-bottom: 10px;
}

.main-content {
  margin-top: 0;
}

/*==== CUSTOM =====*/
ul.flex-list {
  display:flex;
  flex-flow: row wrap;
  justify-content: flex-start;
}

ul.flex-list li {
  list-style-type: none;
  justify-content: space-around;
  flex: 1 auto;
  margin-right:15px;
}
ul.flex-list li img {
  border: 2px solid #000;
  border-radius:8px;
}
.vncvtm { position:relative; margin: 0 10%; width: 80%; }
.vnasect_hdr{
	font-family: "Quantico","HelveticaNeue","Helvetica Neue",sans-serif;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    background-color: #b71234;
    color: #ffbf00;
    margin-bottom: 10px;
    padding: 2px 10px;
    line-height: 1.2;
    box-decoration-break: clone;
}
.saved-cart-link {color: #ffbf00; }

.fb-messenger-checkbox {
    background: transparent !important;
	margin-top:10px;
}

.pricelizer-modal-content iframe .btn {
	background-color: #b71234;
}